{% extends 'base.html.twig' %}

{% block main %}
    {% set videoUrl = get_url_video(video) %}
    <div class="video-container d-flex align-items-center justify-content-center">
        <iframe width="100%" height="500" src="{{ videoUrl }}"
                allow="encrypted-media" allowfullscreen id="main_video"></iframe>
    </div>
    <div class="row">
        <div class="col-md-4">
            <fieldset class=" border p-3 mb-4">
                <legend></legend>
                {% for genre in genres %}
                    <div>
                        <input type="checkbox" id="genre_{{ genre.id }}" name="genre[]" value="{{ genre.id }}">
                        <label for="genre_{{ genre.id }}">{{ genre.name }}</label>
                    </div>
                {% endfor %}
            </fieldset>
        </div>
        <div class="col-md-8">
            <div id="list_movies">
                {% include 'movies/_movies_by_genres.html.twig' with {'movies': movies} %}
            </div>
        </div>
    </div>
    <div class="modal fade" id="showDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div id="showDetail-content"></div>
    </div>
{% endblock %}
