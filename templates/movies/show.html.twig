{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block main %}
    {% set videoUrl = get_url_video(video) %}
    <div class="row">
        <div class="d-flex align-items-center justify-content-center">
            <iframe width="100%" height="500" src="{{ videoUrl }}" allow="encrypted-media" allowfullscreen></iframe>
        </div>
        <div class="card card-body m-4">
            <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                <div class="mr-2 mb-3 mb-lg-0">
                    <img src="{{ get_fully_image_url_movies(movie.poster_path, 'w154') }}" alt="">
                </div>
                <div class="media-body">
                    <div class="d-flex justify-content-between">
                        <div class="">
                            <span class="h2 text-muted">{{ movie.title }}</span>
                        </div>
                        <div class="ratings d-flex">
                            {% include 'rating/ratings.html.twig' with {'voteAverage': movie.vote_average} %}
                            <div class="text-muted">({{ movie.vote_count }} votes)</div>
                        </div>
                        <div></div>
                    </div>
                    <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                        <li class="list-inline-item text-muted">{{ movie.release_date|date('Y') }}</li>
                    </ul>
                    <p class="mb-3">{{ movie.overview|escape }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

